#! /usr/bin/python3

import argparse
import os, sys, shutil


from SalomeOnDemandTK.extension_utilities import logger

import salome_pkg_install
import salome_pkg_remove

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    subparsers = parser.add_subparsers(dest="mode", required=True, help='We have 2 functions in this executable: install, remove')

    parser_install = subparsers.add_parser("install")
    salome_pkg_install.add_arguments(parser_install)

    parser_remove = subparsers.add_parser("remove")
    salome_pkg_remove.add_arguments(parser_remove)

    args = parser.parse_args()
    args.func(args)

